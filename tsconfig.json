{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "CommonJS",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "build",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "resolveJsonModule": true,
        "sourceMap": false,
        "strict": true,
        "target": "ES2017"
    },
    "include": [
        "src/**/*.ts",
        "jest.config.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}
